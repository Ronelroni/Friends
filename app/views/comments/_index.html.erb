        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p><%= link_to "Modifier", edit_publication_comment_path(publication, comment), remote: true %>&nbsp;&nbsp;&nbsp;&nbsp;
