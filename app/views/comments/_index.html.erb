<% comments.each do |comment| %>
  <div class="feed-element">
    <div class="media-body" style="font-size:14px;">
      <% if comment.id.present? %>  
        <div class="well" style="font-size:14px;">
          <div class="comment-content" id ="this_comment_<%= comment.id %>">
            <span class="pull-right text-navy"><%= time_ago_in_words(comment.created_at) %> ago</span>
            <strong><%= comment.user.name %></strong> commented this publication.
              <br>
            <strong> Commentaire : </strong><%= comment.content %>
          </div>
          <% if current_user.name == comment.user.name %>
            <div class="actions mt-2">
              <%= link_to "Modifier", edit_publication_comment_path(publication, comment), remote: true, class: 'btn btn-xs btn-primary'  %>
              <%= link_to "Effacer", publication_comment_path(comment.publication_id, comment.id), method: :delete, remote: true,  data: { confirm: 'Do you really want to delete this?' }, class: 'btn btn-xs btn-outline-danger'  %>
            </div>
          <% end %>
        </div> <br>
      <% end %>
    </div>
  </div>
<% end %>